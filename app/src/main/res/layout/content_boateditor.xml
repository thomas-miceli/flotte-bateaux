<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_boateditor"
        tools:context=".Activities.BoateditorActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="388dp"
            android:layout_height="89dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" android:layout_marginEnd="6dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:id="@+id/layoutBoatName" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/layoutCaptainName" app:layout_constraintHorizontal_bias="1.0">
        <TextView
                android:text="Nom du bateau"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/boatName" tools:text="Nom du bateau"
                android:textSize="30sp"/>
        <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/inputBoatName">

            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/editText_boatName" android:layout_weight="1"/>
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="372dp"
            android:layout_height="109dp" android:layout_marginEnd="6dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/layoutBoatName" android:id="@+id/layoutCaptainName"
    >
        <TextView
                android:text="Nom du capitaine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/captainName" tools:text="Nom du capitaine"
                android:textSize="30sp"/>
        <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/inputCaptainName">

            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/editText_captainName" android:layout_weight="1"/>
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="367dp"
            android:layout_height="113dp" android:layout_marginEnd="6dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/layoutCaptainName" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:id="@+id/layoutPort">
        <TextView
                android:text="Port de départ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/port" tools:text="Port de départ"
                android:textSize="30sp"/>
        <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/inputPort">

            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/editText_port" android:layout_weight="1"/>
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="364dp"
            android:layout_height="98dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/layoutPort" android:layout_marginEnd="6dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:id="@+id/layoutBoatType">
        <TextView
                android:text="Type de bateau"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/boatType" tools:text="Type de bateau"
                android:textSize="30sp"/>
        <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/inputBoatType">

            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/editText_boatType" android:layout_weight="1"/>
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="369dp"
            android:layout_height="41dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="6dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="7dp" android:layout_marginTop="23dp"
            app:layout_constraintTop_toBottomOf="@+id/layoutBoatType" android:id="@+id/layoutButton">
        <Button
                android:text="METTRE A JOUR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/buttonUpdate" android:onClick="updateData"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>