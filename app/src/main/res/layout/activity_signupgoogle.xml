<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.SignUpGoogleActivity"
        android:background="#000000">


    <TextView
            android:text="Compte Google"
            android:textColor="#FFFFFF"
            android:textSize="40sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="80dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"/>
    <TextView
            android:textColor="#878787"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_height="34dp"
            android:id="@+id/textViewMail"
            android:text="a"
            android:layout_marginStart="50dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="50dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="5dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="18sp"
            android:backgroundTint="#FFFFFF"
            android:ems="10"
            android:id="@+id/inputPseudo"
            android:hint="Pseudo"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="50dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="50dp"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/textViewMail"
            app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="S'inscrire"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@drawable/buttonshape"
            android:id="@+id/button" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="50dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="50dp"
            android:onClick="submit"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="50dp" app:layout_constraintBottom_toBottomOf="parent"
    />
</android.support.constraint.ConstraintLayout>