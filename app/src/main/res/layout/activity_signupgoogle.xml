<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.SignUpGoogleActivity">


    <TextView
            android:text="Mail :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toStartOf="@+id/textViewMail"
            android:layout_marginEnd="7dp" android:layout_marginBottom="476dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewMail" android:layout_marginStart="7dp"
            app:layout_constraintStart_toEndOf="@+id/textView" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="476dp" app:layout_constraintBottom_toBottomOf="parent" android:text="a"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/inputPseudo"
            android:hint="Pseudo" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="153dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="84dp"
            android:layout_marginBottom="312dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="85dp"/>
    <Button
            android:text="Inscription"
            android:layout_width="198dp"
            android:layout_height="wrap_content"
            android:id="@+id/button" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="93dp"
            android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/inputPseudo"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="93dp"
            android:layout_marginBottom="252dp" app:layout_constraintBottom_toBottomOf="parent"
            android:onClick="submit"/>
</android.support.constraint.ConstraintLayout>