<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".Activities.BoatEditorActivity">

    <TextView
        android:text="Nom du bateau :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/text_boatname" android:textSize="24sp"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/edit_boatname"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="236dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/edit_boatname"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/text_boatname"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toTopOf="@+id/text_captainname"/>

    <TextView
            android:text="Nom du capitaine :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/text_captainname" android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/edit_boatname"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="212dp" android:layout_marginBottom="1dp"
            app:layout_constraintBottom_toTopOf="@+id/edit_captainname" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="1dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/edit_captainname"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/text_captainname"
        android:layout_marginBottom="31dp" app:layout_constraintBottom_toTopOf="@+id/text_boattype"/>

    <TextView
            android:text="Type de bateau :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/text_boattype" android:textSize="24sp"
            tools:ignore="MissingConstraints"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="236dp" android:layout_marginTop="1dp"
            app:layout_constraintTop_toBottomOf="@+id/edit_captainname" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/edit_boattype"/>
    <TextView
            android:text="Port :"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/text_harbour" android:textSize="24sp"
            tools:ignore="MissingConstraints"
            android:layout_marginTop="1dp" app:layout_constraintTop_toBottomOf="@+id/edit_boattype"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
    />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/edit_boattype"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="37dp"
        app:layout_constraintBottom_toTopOf="@+id/text_harbour"
        app:layout_constraintTop_toBottomOf="@+id/text_boattype"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/harbourspinner"
        android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/text_harbour"
        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
    />
    <Button
            android:text="Mettre Ã  jour"
            android:layout_width="wrap_content"
            android:layout_height="48dp" android:id="@+id/button_update" android:onClick="updateData"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="140dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="140dp"
            android:layout_marginBottom="4dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.481" android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@+id/containerspinner"/>
    <Spinner
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:id="@+id/containerspinner"
            app:layout_constraintTop_toBottomOf="@+id/containerLabel" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/button_update" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>
    <TextView
            android:text="Container"
            android:layout_width="134dp"
            android:layout_height="31dp"
            android:id="@+id/containerLabel" android:layout_marginTop="13dp"
            app:layout_constraintTop_toBottomOf="@+id/harbourspinner" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="242dp" android:layout_marginBottom="1dp"
            app:layout_constraintBottom_toTopOf="@+id/containerspinner" app:layout_constraintVertical_bias="0.6"/>

</android.support.constraint.ConstraintLayout>


