<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.BoatEditorActivity"
    android:background="#000000">

    <TextView
            android:text="Ã‰dition"
            android:textColor="#FFFFFF"
            android:textSize="40sp"
            android:layout_width="284dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:layout_marginTop="80dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="50dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <EditText
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="18sp"
            android:backgroundTint="#FFFFFF"
            android:hint="Nom du bateau"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edit_boatname"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="50dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="50dp" app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/textView6"/>

    <EditText
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="18sp"
            android:backgroundTint="#FFFFFF"
            android:hint="Nom du capitaine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edit_captainname"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="50dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="50dp" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="10dp" app:layout_constraintTop_toBottomOf="@+id/edit_boatname"/>

    <TextView
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:hint="Nom du capitaine"
            android:text="Port"
            android:id="@+id/text_harbour"
            tools:ignore="MissingConstraints"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="50dp" android:layout_height="30dp" android:layout_width="43dp"
            android:layout_marginTop="22dp" app:layout_constraintTop_toBottomOf="@+id/edit_boattype"/>
    <EditText
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="18sp"
            android:backgroundTint="#FFFFFF"
            android:hint="Type du bateau"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edit_boattype"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginStart="50dp" android:layout_marginEnd="50dp" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/edit_captainname"/>

    <Spinner
            android:textColor="#FFFFFF"
            android:background="#333333"
            android:popupBackground="#FFFFFF"
            android:layout_width="240dp"
            android:id="@+id/harbourspinner"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="50dp"
            android:layout_height="30dp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/edit_boattype"/>
    <Button
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:background="@drawable/buttonshape"
            android:text="valider"
            android:layout_width="0dp"
            android:layout_height="40dp" android:id="@+id/button_update" android:onClick="updateData"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="50dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="50dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.481"/>

</android.support.constraint.ConstraintLayout>


