<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".Activities.BoatEditorActivity">

    <TextView
        android:text="Nom du bateau :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/text_boatname" android:textSize="24sp"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/edit_boatname"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="236dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/edit_boatname"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/text_boatname"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toTopOf="@+id/text_captainname"/>

    <TextView
        android:text="Nom du capitaine :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/text_captainname" android:textSize="24sp"
        android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/edit_boatname"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="212dp" android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toTopOf="@+id/edit_captainname"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/edit_captainname"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/text_captainname"
        android:layout_marginBottom="31dp" app:layout_constraintBottom_toTopOf="@+id/text_boattype"/>

    <TextView
        android:text="Type de bateau :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/text_boattype" android:textSize="24sp"
        tools:ignore="MissingConstraints"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="236dp" android:layout_marginTop="31dp"
        app:layout_constraintTop_toBottomOf="@+id/edit_captainname" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/edit_boattype"/>
    <TextView
        android:text="Port :"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:id="@+id/text_harbour" android:textSize="24sp"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="37dp" app:layout_constraintTop_toBottomOf="@+id/edit_boattype"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
    />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/edit_boattype"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="37dp"
        app:layout_constraintBottom_toTopOf="@+id/text_harbour"
        app:layout_constraintTop_toBottomOf="@+id/text_boattype"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/harbourspinner"
        android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/text_harbour"
        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
    />
    <Button
        android:text="Mettre Ã  jour"
        android:layout_width="wrap_content"
        android:layout_height="48dp" android:id="@+id/button_update" android:onClick="updateData"
        android:layout_marginTop="64dp"
        app:layout_constraintTop_toBottomOf="@+id/harbourspinner" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="140dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="140dp"
        android:layout_marginBottom="149dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <EditText
            android:layout_width="162dp"
            android:layout_height="wrap_content"
            android:inputType="numberSigned"
            android:ems="10"
            android:id="@+id/latitudeInput"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/edit_captainname" android:layout_marginBottom="11dp"
            app:layout_constraintBottom_toTopOf="@+id/text_boattype" android:hint="latitude"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberSigned"
            android:ems="10"
            android:id="@+id/longitudeInput"
            android:hint="longitude" app:layout_constraintStart_toEndOf="@+id/editText"
            android:layout_marginStart="16dp" android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/edit_captainname" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="44dp" app:layout_constraintBottom_toTopOf="@+id/edit_boattype"/>

</android.support.constraint.ConstraintLayout>


