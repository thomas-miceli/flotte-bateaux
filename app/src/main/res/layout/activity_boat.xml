<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.BoatActivity"
        android:background="#000000">

    <TextView
            android:text="Informations"
            android:textColor="#FFFFFF"
            android:textSize="40sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:layout_marginTop="80dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="50dp" android:layout_marginEnd="50dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Bateau"
            android:id="@+id/textView"
            android:layout_marginStart="50dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/textView6"/>
    <TextView
            android:textColor="#878787"
            android:textSize="20sp"
            android:text="bateau"
            android:layout_width="261dp"
            android:layout_height="wrap_content"
            android:id="@+id/boatName"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/textView6" app:layout_constraintStart_toEndOf="@+id/textView"
            android:layout_marginStart="10dp"/>
    <TextView
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:text="Capitaine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginStart="50dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:textColor="#878787"
            android:textSize="20sp"
            android:text="captaine"
            android:layout_width="232dp"
            android:layout_height="wrap_content"
            android:id="@+id/captainName"
            app:layout_constraintStart_toEndOf="@+id/textView2"
            android:layout_marginStart="16dp"
            android:layout_marginTop="15dp" app:layout_constraintTop_toBottomOf="@+id/boatName"/>
    <TextView
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:text="CoordonnÃ©es"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:layout_marginStart="50dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:textColor="#878787"
            android:textSize="20sp"
            android:text="coods"
            android:layout_width="204dp"
            android:layout_height="wrap_content"
            android:id="@+id/coords"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/captainName" app:layout_constraintStart_toEndOf="@+id/textView3"
            android:layout_marginStart="10dp"/>
    <TextView
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:text="Port"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:id="@+id/textView4"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3" android:layout_marginStart="50dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:textColor="#878787"
            android:textSize="20sp"
            android:text="port"
            android:layout_width="284dp"
            android:layout_height="wrap_content"
            android:id="@+id/portText"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/coords" app:layout_constraintStart_toEndOf="@+id/textView4"
            android:layout_marginStart="10dp"/>
    <Button
            android:text="modifier"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:background="@drawable/buttonshape"
            android:id="@+id/editButton"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="50dp" android:onClick="edit"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="50dp"
            android:layout_marginBottom="50dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.0"
    />
</android.support.constraint.ConstraintLayout>
