<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.BoatActivity">

    <TextView
            android:text="Bateau"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="15dp"/>
    <TextView
            android:text="bateau"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/boatName"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="15dp" android:layout_marginStart="56dp"
            app:layout_constraintStart_toEndOf="@+id/textView"/>
    <TextView
            android:text="Capitaine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="13dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"/>
    <TextView
            android:text="captaine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/captainName"
            android:layout_marginTop="13dp"
            app:layout_constraintTop_toBottomOf="@+id/boatName" android:layout_marginStart="40dp"
            app:layout_constraintStart_toEndOf="@+id/textView2"/>
    <TextView
            android:text="Coordonnées"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2"/>
    <TextView
            android:text="coods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/coords" android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@+id/captainName" android:layout_marginStart="14dp"
            app:layout_constraintStart_toEndOf="@+id/textView3"/>
    <TextView
            android:text="Port"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="17dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3"/>
    <TextView
            android:text="port"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/portText" android:layout_marginStart="73dp"
            app:layout_constraintStart_toEndOf="@+id/textView4" android:layout_marginTop="17dp"
            app:layout_constraintTop_toBottomOf="@+id/coords"/>
    <Button
        android:text="Édition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editButton" android:layout_marginTop="85dp" app:layout_constraintTop_toBottomOf="@+id/portText"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="27dp" android:onClick="edit"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="296dp" android:layout_marginBottom="463dp"
        app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>
