<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.AddBoatActivity"
        android:background="#000000">

    <TextView
            android:text="Ajout bateau"
            android:textColor="#FFFFFF"
            android:textSize="40sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constrainedWidth="true" android:layout_marginTop="10dp" android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.1"/>
    <android.support.constraint.ConstraintLayout
            android:layout_width="311dp"
            android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="50dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="50dp"
            app:layout_constraintHorizontal_bias="0.0" android:id="@+id/constraintLayout3"
            android:layout_marginTop="10dp" app:layout_constraintTop_toBottomOf="@+id/textView5"
            android:minHeight="26dp" android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@+id/addboat" app:layout_constraintVertical_bias="0.10">

        <EditText
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:textSize="18sp"
                android:backgroundTint="#FFFFFF"
                android:hint="Bateau"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/boatname"
                tools:ignore="MissingConstraints"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="10dp" app:layout_constraintTop_toBottomOf="@+id/captainname"/>
        <EditText
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:textSize="18sp"
                android:backgroundTint="#FFFFFF"
                android:hint="Capitaine"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/captainname"
                tools:ignore="MissingConstraints"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        <EditText
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:textSize="18sp"
                android:backgroundTint="#FFFFFF"
                android:hint="Latitude"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/latitudeInput"
                tools:ignore="MissingConstraints"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/guideline"
                app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/typespinner"/>
        <Spinner
                android:textColor="#FFFFFF"
                android:background="#333333"
                android:popupBackground="#FFFFFF"
                android:layout_width="0dp"
                android:id="@+id/harbourspinner"
                android:layout_height="30dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/text_harbour2"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/boatname"
                android:layout_marginEnd="4dp"/>
        <Spinner
                android:textColor="#FFFFFF"
                android:background="#333333"
                android:popupBackground="#FFFFFF"
                android:layout_width="0dp"
                android:id="@+id/typespinner"
                android:layout_height="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="4dp"
                android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/harbourspinner"
                app:layout_constraintStart_toEndOf="@+id/text_type" android:layout_marginStart="8dp"/>
        <TextView
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:hint="Nom du capitaine"
                android:text="Port"
                android:id="@+id/text_harbour2"
                tools:ignore="MissingConstraints"
                android:layout_height="26dp" android:layout_width="38dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/harbourspinner" android:layout_marginTop="2dp"
                android:layout_marginStart="3dp"/>
        <TextView
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:hint="Nom du capitaine"
                android:text="Type"
                android:id="@+id/text_type"
                tools:ignore="MissingConstraints"
                android:layout_height="26dp" android:layout_width="42dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="2dp" app:layout_constraintTop_toTopOf="@+id/typespinner"
                android:layout_marginStart="3dp"/>
        <EditText
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:textSize="18sp"
                android:backgroundTint="#FFFFFF"
                android:hint="Longitude"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/longitudeInput"
                tools:ignore="MissingConstraints"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="@+id/guideline"
                android:layout_marginTop="10dp" app:layout_constraintTop_toBottomOf="@+id/typespinner"/>
        <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                              android:id="@+id/guideline"
                                              android:orientation="vertical"
                                              android:visibility="visible"
                                              app:layout_constraintGuide_percent="0.5"/>
    </android.support.constraint.ConstraintLayout>
    <Button
            android:text="Ajouter"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@drawable/buttonshape"
            android:id="@+id/addboat"
            style="@style/Widget.AppCompat.Button.Small"
            android:textAppearance="@style/TextAppearance.AppCompat.Button" android:visibility="visible"
            tools:ignore="MissingConstraints"
            android:layout_marginStart="50dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:onClick="addBoat"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginBottom="10dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="10dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.95"/>
</android.support.constraint.ConstraintLayout>
