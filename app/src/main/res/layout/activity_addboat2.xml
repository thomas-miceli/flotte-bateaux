<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.AddBoatActivity"
        android:background="#000000">

    <TextView
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:hint="Nom du capitaine"
            android:text="Port"
            android:id="@+id/text_harbour2"
            tools:ignore="MissingConstraints"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="50dp" android:layout_height="30dp" android:layout_width="43dp"
            android:layout_marginTop="22dp" app:layout_constraintTop_toBottomOf="@+id/boatname"/>
    <Spinner
            android:textColor="#FFFFFF"
            android:background="#333333"
            android:popupBackground="#FFFFFF"
            android:layout_width="260dp"
            android:id="@+id/harbourspinner"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="50dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/boatname"
            app:layout_constraintStart_toEndOf="@+id/text_harbour2" android:layout_marginStart="8dp"/>
    <TextView
            android:text="Ajout bateau"
            android:textColor="#FFFFFF"
            android:textSize="40sp"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/textView5" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="50dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="50dp"
            android:layout_marginTop="80dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="18sp"
            android:backgroundTint="#FFFFFF"
            android:hint="Capitaine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/captainname"
            tools:ignore="MissingConstraints"
            android:layout_marginStart="50dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="50dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/textView5"/>
    <EditText
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="18sp"
            android:backgroundTint="#FFFFFF"
            android:hint="Bateau"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/boatname"
            tools:ignore="MissingConstraints"
            android:layout_marginStart="50dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="50dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/captainname"/>
    <EditText
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="18sp"
            android:backgroundTint="#FFFFFF"
            android:hint="Latitude"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/latitudeInput"
            tools:ignore="MissingConstraints"
            android:layout_marginStart="50dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/harbourspinner"
            android:layout_marginEnd="220dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="18sp"
            android:backgroundTint="#FFFFFF"
            android:hint="Longitude"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/longitudeInput"
            tools:ignore="MissingConstraints"
            android:layout_marginEnd="50dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp" app:layout_constraintTop_toBottomOf="@+id/harbourspinner"
            android:layout_marginStart="220dp" app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:text="Ajouter"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@drawable/buttonshape"
            android:id="@+id/addboat"
            style="@style/Widget.AppCompat.Button.Small"
            android:textAppearance="@style/TextAppearance.AppCompat.Button" android:visibility="visible"
            tools:ignore="MissingConstraints"
            android:layout_marginStart="50dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="50dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="48dp"
            app:layout_constraintBottom_toBottomOf="parent" android:onClick="addBoat"/>
</android.support.constraint.ConstraintLayout>