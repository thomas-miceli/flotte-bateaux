<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.AddBoatActivity"
        android:background="#000000">

    <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="50dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="50dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="80dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@+id/addboat" app:layout_constraintVertical_bias="0.0">

        <EditText
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:textSize="18sp"
                android:backgroundTint="#FFFFFF"
                android:hint="Bateau"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/boatname"
                tools:ignore="MissingConstraints"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="10dp" app:layout_constraintTop_toBottomOf="@+id/captainname"/>
        <EditText
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:textSize="18sp"
                android:backgroundTint="#FFFFFF"
                android:hint="Capitaine"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/captainname"
                tools:ignore="MissingConstraints"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="40dp"
                app:layout_constraintTop_toBottomOf="@+id/textView5"/>
        <EditText
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:textSize="18sp"
                android:backgroundTint="#FFFFFF"
                android:hint="Latitude"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/latitudeInput"
                tools:ignore="MissingConstraints"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/harbourspinner" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginEnd="160dp" app:layout_constraintEnd_toEndOf="parent"/>
        <Spinner
                android:textColor="#FFFFFF"
                android:background="#333333"
                android:popupBackground="#FFFFFF"
                android:layout_width="0dp"
                android:id="@+id/harbourspinner"
                android:layout_height="30dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/text_harbour2"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp" app:layout_constraintTop_toBottomOf="@+id/boatname"
                android:layout_marginEnd="4dp"/>
        <TextView
                android:text="Ajout bateau"
                android:textColor="#FFFFFF"
                android:textSize="40sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        <TextView
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:hint="Nom du capitaine"
                android:text="Port"
                android:id="@+id/text_harbour2"
                tools:ignore="MissingConstraints"
                android:layout_height="26dp" android:layout_width="38dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/harbourspinner" android:layout_marginTop="2dp"
        />
        <EditText
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:textSize="18sp"
                android:backgroundTint="#FFFFFF"
                android:hint="Longitude"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/longitudeInput"
                tools:ignore="MissingConstraints"
                app:layout_constraintTop_toTopOf="@+id/latitudeInput" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="160dp" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.0"/>
    </android.support.constraint.ConstraintLayout>
    <Button
            android:text="Ajouter"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@drawable/buttonshape"
            android:id="@+id/addboat"
            style="@style/Widget.AppCompat.Button.Small"
            android:textAppearance="@style/TextAppearance.AppCompat.Button" android:visibility="visible"
            tools:ignore="MissingConstraints"
            android:layout_marginStart="50dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:onClick="addBoat"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="50dp" app:layout_constraintBottom_toBottomOf="parent"
    />
</android.support.constraint.ConstraintLayout>