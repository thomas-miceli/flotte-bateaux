<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.SignUpActivity"
        android:background="#000000">

    <TextView
            android:text="Inscription"
            android:textColor="#FFFFFF"
            android:textSize="40sp"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/textView7" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp" android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="10dp"
            app:layout_constraintVertical_bias="0.1"/>
    <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="50dp" android:layout_marginEnd="50dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="10dp" app:layout_constraintTop_toBottomOf="@+id/textView7"
            android:layout_marginBottom="10dp" app:layout_constraintBottom_toTopOf="@+id/submit"
            app:layout_constraintVertical_bias="0.1">

        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/inputMail"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:textSize="18sp"
                android:backgroundTint="#FFFFFF"
                android:hint="Email"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                android:autofillHints="" app:layout_constraintTop_toTopOf="parent"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:ems="10"
                android:id="@+id/inputPseudo"
                android:hint="Pseudo"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:textSize="18sp"
                android:backgroundTint="#FFFFFF"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="30dp" app:layout_constraintTop_toBottomOf="@+id/inputMdp"
                app:layout_constraintStart_toStartOf="parent"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/inputMdp"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:textSize="18sp"
                android:backgroundTint="#FFFFFF"
                android:hint="Mot de passe" android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@+id/inputMail"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
    </android.support.constraint.ConstraintLayout>
    <Button
            android:text="S'inscrire"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@drawable/buttonshape"
            android:id="@+id/submit" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="50dp"
            android:onClick="submit" android:layout_marginEnd="50dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginBottom="10dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="10dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.95"/>


</android.support.constraint.ConstraintLayout>