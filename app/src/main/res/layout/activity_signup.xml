<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.SignUpActivity">

    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/inputMail"
            android:hint="Email" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="90dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp" app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/inputMdp"
            android:hint="Mot de passe" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/inputMail" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="50dp" android:layout_marginEnd="50dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="Inscription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/submit" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="50dp"
            android:layout_marginTop="10dp" app:layout_constraintTop_toBottomOf="@+id/inputMdp"
            android:onClick="submit" android:layout_marginEnd="50dp" app:layout_constraintEnd_toEndOf="parent"/>


</android.support.constraint.ConstraintLayout>