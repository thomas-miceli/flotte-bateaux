<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/textView"/>
    <Button
        android:text="login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnOne" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="148dp"
        app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="148dp"
        android:layout_marginBottom="183dp" app:layout_constraintBottom_toTopOf="@+id/textView"
        android:onClick="click"/>
    <Button
        android:text="liste"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnTwo"
        android:onClick="click"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="148dp" android:layout_marginTop="59dp"
        app:layout_constraintTop_toBottomOf="@+id/btnOne" android:layout_marginBottom="76dp"
        app:layout_constraintBottom_toTopOf="@+id/textView" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="148dp"/>
    <Button
        android:text="Ajout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnThree" android:layout_marginTop="36dp" app:layout_constraintTop_toBottomOf="@+id/btnTwo"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="161dp"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="162dp" android:layout_marginBottom="19dp"
        app:layout_constraintBottom_toTopOf="@+id/textView" android:onClick="click"/>

</android.support.constraint.ConstraintLayout>
